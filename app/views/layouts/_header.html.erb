<header class="pagebanner">

  <%= link_to "Main", root_path, :class => 'button' %>
  <%= link_to "Admin", admin_path, :class => 'button' if current_user.try(:admin?)%>
  <%= link_to "Service Requests", service_path, :class => 'button' if current_user.present?  %>
  <%= link_to "Miscellaneous", misc_path, :class => 'button' if current_user.present?  %>
