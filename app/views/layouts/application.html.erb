<!DOCTYPE html>
<html>
  <head>
    <title>BYS Web Sandbox: <%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
      <div class="maincontent">
        <% flash.each do |message_type, message| %>
          <div class="alert"><%= message %></div>
        <% end %>
        
        <h1><%= yield(:title) %></h1>
        <hr/>

        <%= render :partial => 'shared/requesterrors' if @requesterrors.present? %>
        
        <%= yield %>

        <%= render 'shared/responsefail' if @responsefail.present? %>
        <%= render 'shared/showxml' if @xml.present? && @xmltitle.present? %>
        
        <%= debug(params) if Rails.env.development? %>
      </div>
  </body>
</html>
