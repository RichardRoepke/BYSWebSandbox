<% provide(:title, "Edit User") %>

<div class="form">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: {action: "update"} do |f| %>
      <h3><%= @user.email %></h3>

      <%= f.label :security, "Camp Ground Security Key" %>
      <%= f.text_field :security %>

      <p>Leave password fields blank to not change.</p>

      <%= f.label :password, "New Password (Minimum 6 characters)" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "New Password (Confirmation)" %>
      <%= f.password_field :password_confirmation %>

      <%= f.hidden_field :id %>
      <%= f.submit "Update" %>
    <% end %>
  </div>
</div>

<hr />

<%= link_to 'Back to Index', admin_user_index_path %>